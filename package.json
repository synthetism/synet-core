{
    "name": "@synet/core",
    "version": "0.1.1",
    "description": "Core cryptographic and identity primitives for Synet agents.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "dev:test": "vitest",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean && npm test",
        "coverage": "vitest run --coverage",
        "lint": "biome lint ./src",
        "format": "prettier --write 'src/**/*.ts'",
        "prepublishOnly": "npm run lint && npm run build && npm test"
    },
    "keywords": [
        "synet",
        "identity",
        "crypto",
        "agent"
    ],
    "author": "Synet Team",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@vitest/coverage-v8": "^3.1.3",
        "typescript": "^5.0.0",
        "vitest": "^3.1.3"
    },
    "dependencies": {
        "prettier": "^3.5.3",
        "tweetnacl": "^1.0.3",
        "tweetnacl-util": "^0.15.1"
    }
}
